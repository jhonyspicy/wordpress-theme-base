<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ func.language_attributes() }}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{ func.language_attributes() }}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{ func.language_attributes() }}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{ func.language_attributes() }}> <!--<![endif]-->
	<head>
		<meta charset="{{ func.bloginfo('charset') }}" />
		<title>{{ func.wp_title('&laquo;', true, 'right') }}{{ func.bloginfo('name') }}</title>
		<meta name="description" content="{{ func.bloginfo('description') }}">
		<meta name="keywords" content=" {{ func.get_option('keywords') }} ?>">

		<link rel="stylesheet" type="text/css" href="{{ func.get_stylesheet_uri() }}" media="screen"/>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="pingback" href="{{site.pingback_url}}" />
		{{ func.wp_head() }}

		<base href="{{ func.home_url('/') }}" />
	</head>
	<body {{ func.body_class([func.get_bloginfo('language'), 'ng-app:app']) }}>
		<header class="header">
			{% block header %}
			<div class="wrapper">
				<h1 class="hdr-logo" role="banner">
					<a class="hdr-logo-link" href="/" title="Timber" rel="home">{{ func.bloginfo('name') }}</a>
				</h1>
			</div>
			{% endblock %}
		</header>

		<section id="contents" role="main" class="contents-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{ content_class }}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{ func.get_sidebar() }}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				Copyright {{"now"|date('Y')}}
			</footer>
			{{ func.wp_footer() }}
		{% endblock %}
	</body>
</html>
